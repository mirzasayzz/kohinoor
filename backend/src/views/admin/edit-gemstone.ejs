    <script>
        // Character count for text areas
        function updateCharCount(inputId, countId, max) {
            const input = document.getElementById(inputId);
            const count = document.getElementById(countId);
            
            function update() {
                const current = input.value.length;
                count.textContent = current + '/' + max;
                count.className = current > max * 0.9 ? 'text-right text-sm text-red-500 mt-1' : 'text-right text-sm text-gray-500 mt-1';
            }
            
            input.addEventListener('input', update);
            update(); // Initial count
        }

        // Initialize character counters
        updateCharCount('summary', 'summary-count', 200);
        updateCharCount('description', 'description-count', 2000);
        updateCharCount('seo_title', 'seo-title-count', 60);
        updateCharCount('seo_description', 'seo-description-count', 160);

        // Image preview functionality
        document.getElementById('images').addEventListener('change', function(e) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';
            
            if (e.target.files.length > 0) {
                preview.classList.remove('hidden');
                
                Array.from(e.target.files).forEach((file, index) => {
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            const div = document.createElement('div');
                            div.className = 'relative';
                            div.innerHTML = `
                                <img src="${e.target.result}" class="image-preview w-full h-24 object-cover rounded-lg">
                                <button type="button" class="remove-image" onclick="removePreviewImage(${index})" title="Remove image">×</button>
                            `;
                            preview.appendChild(div);
                        };
                        reader.readAsDataURL(file);
                    }
                });
            } else {
                preview.classList.add('hidden');
            }
        });

        // Remove current image
        function removeCurrentImage(publicId, button) {
            const imageContainer = button.parentElement;
            const hiddenInput = imageContainer.querySelector('input[name="keepImages[]"]');
            
            imageContainer.style.display = 'none';
            if (hiddenInput) {
                hiddenInput.remove();
            }
        }

        // Remove preview image
        function removePreviewImage(index) {
            const preview = document.getElementById('imagePreview');
            const children = Array.from(preview.children);
            if (children[index]) {
                children[index].remove();
            }
            
            // Update file input
            const fileInput = document.getElementById('images');
            const dt = new DataTransfer();
            Array.from(fileInput.files).forEach((file, i) => {
                if (i !== index) {
                    dt.items.add(file);
                }
            });
            fileInput.files = dt.files;
            
            if (preview.children.length === 0) {
                preview.classList.add('hidden');
            }
        }

        // Initialize Lucide icons
        lucide.createIcons();
    </script>
