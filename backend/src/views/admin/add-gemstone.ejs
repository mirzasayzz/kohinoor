                                <i data-lucide="info" class="w-6 h-6"></i>
                                <div>
                                    <h3 class="text-xl font-bold">Basic Information</h3>
                                    <p class="text-blue-100 text-sm mt-1">Essential gemstone details</p>
                                </div>
                            </div>
