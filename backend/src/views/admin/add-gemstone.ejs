    <!-- Scripts -->
    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Purpose Tags Functions
        let purposes = [];
        
        function initializePurposes() {
            const purposeInput = document.getElementById('purpose');
            const existingPurposes = purposeInput.value;
            if (existingPurposes) {
                purposes = existingPurposes.split(',').map(s => s.trim()).filter(s => s);
                renderPurposeTags();
            }
        }
        
        function addPurpose() {
            const input = document.getElementById('purposeInput');
            const value = input.value.trim();
            if (value && !purposes.includes(value)) {
                purposes.push(value);
                input.value = '';
                renderPurposeTags();
                updatePurposesInput();
                updateFormProgress();
            }
        }
        
        function addQuickPurpose(purpose) {
            if (!purposes.includes(purpose)) {
                purposes.push(purpose);
                renderPurposeTags();
                updatePurposesInput();
                updateFormProgress();
            }
        }
        
        function removePurpose(index) {
            purposes.splice(index, 1);
            renderPurposeTags();
            updatePurposesInput();
            updateFormProgress();
        }
        
        function renderPurposeTags() {
            const container = document.getElementById('purposeTags');
            container.innerHTML = '';
            
            purposes.forEach((purpose, index) => {
                const tag = document.createElement('div');
                tag.className = 'bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm flex items-center space-x-2 cursor-pointer hover:bg-yellow-200 transition duration-200';
                tag.innerHTML = `
                    <span>${purpose}</span>
                    <button type="button" onclick="removePurpose(${index})" class="hover:bg-yellow-300 rounded-full p-1">
                        <i data-lucide="x" class="w-3 h-3"></i>
                    </button>
                `;
                container.appendChild(tag);
            });
            
            lucide.createIcons();
        }
        
        function updatePurposesInput() {
            const input = document.getElementById('purpose');
            input.value = purposes.join(', ');
        }

        // Image handling
        function handleImageSelect() {
            const input = document.getElementById('images');
            const container = document.getElementById('image-preview-container');
            container.innerHTML = '';
            
            Array.from(input.files).forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const div = document.createElement('div');
                    div.className = 'relative group';
                    div.innerHTML = `
                        <img src="${e.target.result}" class="w-full h-24 object-cover rounded-lg shadow-md hover:shadow-lg transition duration-200">
                        <div class="absolute inset-0 bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition duration-200 rounded-lg flex items-center justify-center">
                            <span class="text-white text-sm font-medium">${file.name}</span>
                        </div>
                    `;
                    container.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
            
            updateFormProgress();
        }

        // Form progress tracking
        function updateFormProgress() {
            const form = document.getElementById('gemstoneForm');
            const inputs = form.querySelectorAll('input[required], textarea[required], select[required]');
            let filled = 0;
            
            inputs.forEach(input => {
                if (input.value.trim() !== '') filled++;
            });
            
            // Add points for optional fields
            if (document.getElementById('urduName').value.trim()) filled++;
            if (document.getElementById('color').value.trim()) filled++;
            if (purposes.length > 0) filled++;
            if (document.getElementById('images').files.length > 0) filled++;
            
            const total = inputs.length + 4; // +4 for optional fields
            const percentage = Math.round((filled / total) * 100);
            
            const progressBar = document.getElementById('form-progress');
            const progressText = document.getElementById('progress-text');
            
            if (progressBar) progressBar.style.width = percentage + '%';
            if (progressText) progressText.textContent = percentage + '% Complete';
        }

        // Update gemstone info from predefined selection
        function updateGemstoneInfo() {
            const select = document.getElementById('predefined-select');
            const selectedValue = select.value;
            
            if (selectedValue && selectedValue !== 'custom') {
                try {
                    const gemInfo = JSON.parse(selectedValue);
                    document.getElementById('name').value = gemInfo.name;
                    document.getElementById('urduName').value = gemInfo.urdu;
                    document.getElementById('category').value = gemInfo.category;
                    updateFormProgress();
                } catch (e) {
                    console.error('Error parsing gemstone info:', e);
                }
            }
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            initializePurposes();
            
            // Purpose input Enter key handling
            const purposeInput = document.getElementById('purposeInput');
            purposeInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    addPurpose();
                }
            });
            
            // Form progress tracking
            const inputs = document.querySelectorAll('input, textarea, select');
            inputs.forEach(input => {
                input.addEventListener('input', updateFormProgress);
                input.addEventListener('change', updateFormProgress);
            });
            
            // Enhanced form submission
            const form = document.getElementById('gemstoneForm');
            const submitButton = document.getElementById('submitButton');
            const submitText = document.getElementById('submitText');
            
            form.addEventListener('submit', function(e) {
                submitButton.classList.add('opacity-75', 'cursor-not-allowed');
                submitText.innerHTML = '<i data-lucide="loader" class="w-5 h-5 mr-2 animate-spin"></i>Creating...';
                lucide.createIcons();
            });
            
            // Initial progress check
            updateFormProgress();
        });

        // Auto-hide success/error messages
        setTimeout(() => {
            const alerts = document.querySelectorAll('.bg-red-50, .bg-green-50');
            alerts.forEach(alert => {
                alert.style.transition = 'opacity 0.5s, transform 0.5s';
                alert.style.opacity = '0';
                alert.style.transform = 'translateY(-20px)';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);
    </script>
    
    <script src="/admin/assets/js/admin.js"></script>
