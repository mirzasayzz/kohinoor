                                    <option value="">‚ú® Choose a predefined gemstone or enter custom</option>
                                    <% predefinedGemstones.forEach(gem => { %>
                                        <option value="<%= JSON.stringify(gem).replace(/"/g, '&quot;') %>">üíé <%= gem.name %> - <%= gem.urdu %></option>
                                    <% }) %>
