<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f8fafc',
                            500: '#0f172a',
                            600: '#0f172a',
                            700: '#020617'
                        },
                        ruby: '#b91c1c',
                        emerald: '#047857',
                        golden: '#facc15'
                    }
                }
            }
        }
    </script>
    
    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/admin/assets/css/admin.css">
    
    <style>
        .category-card {
            transition: all 0.3s ease;
        }
        .category-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    
    <!-- Navigation -->
    <nav class="bg-white shadow-lg border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex items-center">
                    <a href="/admin/dashboard" class="flex items-center space-x-3">
                        <div class="w-8 h-8 bg-gradient-to-br from-emerald-500 to-golden rounded-lg flex items-center justify-center">
                            <i data-lucide="gem" class="w-5 h-5 text-white"></i>
                        </div>
                        <span class="text-xl font-bold text-gray-900">Kohinoor Admin</span>
                    </a>
                </div>
                
                <div class="flex items-center space-x-4">
                    <span class="text-gray-700">Welcome, <%= user.name %></span>
                    <a href="/admin/logout" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition duration-200">
                        <i data-lucide="log-out" class="w-4 h-4 inline mr-1"></i>
                        Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="bg-white rounded-lg shadow-sm mb-6 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 flex items-center">
                        <i data-lucide="tags" class="w-8 h-8 mr-3 text-emerald-600"></i>
                        Manage Categories
                    </h1>
                    <p class="mt-2 text-gray-600">Add, edit, and organize gemstone categories</p>
                </div>
                <div class="flex items-center space-x-4">
                    <button id="addCategoryBtn" class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2 rounded-lg text-sm font-medium transition duration-200">
                        <i data-lucide="plus" class="w-4 h-4 inline mr-2"></i>
                        Add Category
                    </button>
                    <a href="/admin/gemstones" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition duration-200">
                        <i data-lucide="arrow-left" class="w-4 h-4 inline mr-1"></i>
                        Back to Gemstones
                    </a>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        <% if (error) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6" role="alert">
                <strong class="font-bold">Error!</strong>
                <span class="block sm:inline ml-2"><%= error %></span>
            </div>
        <% } %>
        
        <% if (success) { %>
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6" role="alert">
                <strong class="font-bold">Success!</strong>
                <span class="block sm:inline ml-2"><%= success %></span>
            </div>
        <% } %>

        <!-- Categories Grid -->
        <% if (categories && categories.length > 0) { %>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                <% categories.forEach(category => { %>
                    <div class="category-card bg-white rounded-lg shadow-md overflow-hidden">
                        <!-- Card Header -->
                        <div class="bg-gradient-to-r from-emerald-500 to-golden p-4 text-white">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-2">
                                    <span class="text-2xl"><%= category.label.split(' ')[0] %></span>
                                    <div>
                                        <h3 class="font-bold text-lg"><%= category.name %></h3>
                                        <% if (category.urdu) { %>
                                            <p class="text-sm opacity-90"><%= category.urdu %></p>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-1">
                                    <span class="<%= category.isActive ? 'bg-green-500' : 'bg-red-500' %> text-white text-xs px-2 py-1 rounded-full">
                                        <%= category.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Card Body -->
                        <div class="p-4">
                            <% if (category.description) { %>
                                <p class="text-gray-600 text-sm mb-3 line-clamp-2"><%= category.description %></p>
                            <% } %>
                            
                            <div class="flex items-center justify-between text-xs text-gray-500 mb-4">
                                <span>Order: <%= category.order %></span>
                                <span>Added: <%= new Date(category.createdAt).toLocaleDateString() %></span>
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center justify-between">
                                <button 
                                    onclick="toggleCategoryStatus('<%= category._id %>')"
                                    class="<%= category.isActive ? 'bg-orange-500 hover:bg-orange-600' : 'bg-green-500 hover:bg-green-600' %> text-white px-3 py-2 rounded text-xs font-medium transition duration-200"
                                >
                                    <i data-lucide="<%= category.isActive ? 'eye-off' : 'eye' %>" class="w-3 h-3 inline mr-1"></i>
                                    <%= category.isActive ? 'Deactivate' : 'Activate' %>
                                </button>
                                
                                <button 
                                    onclick="deleteCategory('<%= category._id %>', '<%= category.name %>')"
                                    class="bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded text-xs font-medium transition duration-200"
                                >
                                    <i data-lucide="trash-2" class="w-3 h-3 inline mr-1"></i>
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="max-w-md mx-auto">
                    <div class="w-32 h-32 mx-auto mb-6 bg-gradient-to-br from-emerald-400 to-golden rounded-full flex items-center justify-center">
                        <i data-lucide="tags" class="w-16 h-16 text-white"></i>
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-3">No Categories Found</h3>
                    <p class="text-gray-600 mb-6">Get started by adding your first gemstone category</p>
                    <button id="addFirstCategoryBtn" class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-3 rounded-lg font-medium transition duration-200">
                        <i data-lucide="plus" class="w-4 h-4 inline mr-2"></i>
                        Add Your First Category
                    </button>
                </div>
            </div>
        <% } %>
    </div>

    <!-- Add Category Modal -->
    <div id="addCategoryModal" class="fixed inset-0 bg-gray-600 bg-opacity-75 z-50 hidden">
        <div class="flex items-center justify-center min-h-screen p-4">
            <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
                <div class="bg-gradient-to-r from-emerald-500 to-golden p-6 text-white rounded-t-lg">
                    <h3 class="text-lg font-bold flex items-center">
                        <i data-lucide="plus-circle" class="w-5 h-5 mr-2"></i>
                        Add New Category
                    </h3>
                </div>
                
                <form action="/admin/categories/add" method="POST" class="p-6">
                    <div class="space-y-4">
                        <div>
                            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name *</label>
                            <input type="text" id="name" name="name" required
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                                   placeholder="e.g., Amethyst">
                        </div>
                        
                        <div>
                            <label for="urdu" class="block text-sm font-medium text-gray-700 mb-2">Urdu Name</label>
                            <input type="text" id="urdu" name="urdu"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                                   placeholder="e.g., جمشت">
                        </div>
                        
                        <div>
                            <label for="emoji" class="block text-sm font-medium text-gray-700 mb-2">Emoji</label>
                            <input type="text" id="emoji" name="emoji" maxlength="2"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                                   placeholder="💜">
                        </div>
                        
                        <div>
                            <label for="order" class="block text-sm font-medium text-gray-700 mb-2">Display Order</label>
                            <input type="number" id="order" name="order" min="0"
                                   class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                                   placeholder="0">
                        </div>
                        
                        <div>
                            <label for="description" class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                            <textarea id="description" name="description" rows="3"
                                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-transparent"
                                      placeholder="Brief description of this category..."></textarea>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-end space-x-3 mt-6">
                        <button type="button" onclick="closeModal()" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition duration-200">
                            Cancel
                        </button>
                        <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white px-6 py-2 rounded-md transition duration-200">
                            <i data-lucide="save" class="w-4 h-4 inline mr-1"></i>
                            Add Category
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Modal functions
        function openModal() {
            document.getElementById('addCategoryModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('addCategoryModal').classList.add('hidden');
            // Reset form
            document.querySelector('#addCategoryModal form').reset();
        }

        // Event listeners
        document.getElementById('addCategoryBtn')?.addEventListener('click', openModal);
        document.getElementById('addFirstCategoryBtn')?.addEventListener('click', openModal);

        // Close modal when clicking outside
        document.getElementById('addCategoryModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Delete category function
        async function deleteCategory(id, name) {
            if (!confirm(`Are you sure you want to delete the category "${name}"?\n\nThis action cannot be undone.`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/categories/delete/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Reload page to show updated list
                    window.location.href = '/admin/categories?success=' + encodeURIComponent(result.message);
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                console.error('Delete error:', error);
                alert('Failed to delete category. Please try again.');
            }
        }

        // Toggle category status
        async function toggleCategoryStatus(id) {
            try {
                const response = await fetch(`/admin/categories/toggle/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Reload page to show updated status
                    window.location.href = '/admin/categories?success=' + encodeURIComponent(result.message);
                } else {
                    alert('Error: ' + result.error);
                }
            } catch (error) {
                console.error('Toggle error:', error);
                alert('Failed to update category status. Please try again.');
            }
        }
    </script>
</body>
</html> 